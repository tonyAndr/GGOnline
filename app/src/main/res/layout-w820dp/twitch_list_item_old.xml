<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/colorPrimary"
    android:layout_margin="8dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_twitch_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:src="@drawable/twitch_placeholder"
            android:background="@color/colorPrimaryDark"
            android:scaleType="fitXY" />

        <LinearLayout
            android:id="@+id/list_item_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/tv_twitch_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorTwitchTextBackground"
                android:ellipsize="end"
                android:maxLines="2"
                android:minLines="1"
                android:padding="4dp"
                android:text="Channel: Lirik"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_twitch_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorTwitchTextBackground"
                android:ellipsize="end"
                android:gravity="start"
                android:lines="1"
                android:padding="4dp"
                android:text="Test  wdawd awdw"
                android:textColor="@android:color/white"
                android:textSize="16sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_twitch_viewers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:gravity="end"
            android:paddingBottom="4dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:text="3423"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_twitch_lang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:gravity="end"
            android:paddingBottom="4dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:text="3423"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="visible" />
    </FrameLayout>


</android.support.v7.widget.CardView>
